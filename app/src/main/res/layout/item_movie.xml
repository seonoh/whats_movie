<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/movie_root_linear"
    android:layout_width="match_parent"
    android:gravity="center"
    android:layout_height="wrap_content"
    android:layout_margin="10dp">

<android.support.v7.widget.CardView
    app:cardCornerRadius="8dp"
    android:id="@+id/movie_root_card"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
<LinearLayout
    android:layout_margin="8dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <ImageView
        android:layout_gravity="center"
        android:id="@+id/movie_imv"
        android:src="@drawable/ic_launcher_background"
        android:layout_width="110dp"
        android:layout_height="110dp" />

    <LinearLayout

        android:layout_margin="4dp"
        android:id="@+id/movie_info_linear"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/movie_title_linear"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="15dp"
                android:id="@+id/movie_title_tv"
                android:hint="영화제목 : "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:textColor="#000000"
                android:textSize="15dp"
                android:id="@+id/movie_title_value_tv"
                android:hint="사자"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="4dp"
            android:id="@+id/movie_director_linear"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="15dp"
                android:id="@+id/movie_director_tv"
                android:hint="영화감독 : "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:textSize="15dp"
                android:id="@+id/movie_director_value_tv"
                android:hint="봉준호"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="4dp"
            android:id="@+id/movie_actor_linear"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="15dp"
                android:id="@+id/movie_actor_tv"
                android:hint="출연배우 : "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:textSize="15dp"
                android:id="@+id/movie_actor_value_tv"
                android:hint="박서준, 안성기, 우도환"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="4dp"
            android:id="@+id/movie_user_rating_linear"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <TextView
            android:textSize="15dp"
            android:id="@+id/movie_user_rating_tv"
            android:hint="평점 : "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
            <TextView
                android:textSize="15dp"
                android:id="@+id/movie_user_rating_valuetv"
                android:hint="8.02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>



    </LinearLayout>
</LinearLayout>


</android.support.v7.widget.CardView>




</LinearLayout>